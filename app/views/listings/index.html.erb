<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
    <div class="col-md-4">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
        
         <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
          <p><%= "Sold by #{listing.user.name}"%></p>
          
          <% if (user_signed_in?) && (current_user == listing.user)%>
                    <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-primary" %>
                    <%= link_to 'Destroy', listing,class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      </div>
    </div>
    <%end%>
  </div>


<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-success" %>
<% end %>
</div>  